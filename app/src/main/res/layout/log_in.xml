<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAF7A6 "
    android:clickable="true"
    android:onClick="move"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/logInPage"
            android:textColor="#000"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/loginlayout"
        android:layout_width="324dp"
        android:layout_height="203dp"
        android:layout_marginTop="192dp"
        android:orientation="vertical"
        android:padding="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">


        <EditText
            android:id="@+id/editlogin"
            android:layout_width="324dp"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="@string/number"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/logPassword"
            android:layout_width="324dp"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="@string/PasswordText"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="178dp"
        android:layout_height="41dp"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:text="@string/LogInTex"
        android:background="#DAF7A6 "
        app:layout_constraintBottom_toBottomOf="@id/loginlayout"
        app:layout_constraintEnd_toEndOf="@+id/loginlayout"
        app:layout_constraintStart_toStartOf="@+id/loginlayout" />

    <TextView
        android:id="@+id/RegistrationLink"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="192dp"
        android:clickable="true"
        android:focusable="auto"
        android:fontFamily="sans-serif"
        android:linksClickable="true"
        android:onClick="move"
        android:text="Go to Admin Registrar"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginlayout"
        app:layout_constraintVertical_bias="0.625" />

</androidx.constraintlayout.widget.ConstraintLayout>